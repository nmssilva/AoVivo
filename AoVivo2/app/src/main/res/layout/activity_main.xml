<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="inescosta.aovivo.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:gravity="center"
            android:text="@string/title_home" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="589dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:srcCompat="@mipmap/apphome" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="589dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:srcCompat="@mipmap/info" />

        <ImageView
            android:id="@+id/cave"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/cave45" />

        <ImageView
            android:id="@+id/maus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/maus" />

        <ImageView
            android:id="@+id/planob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/planob" />

        <ImageView
            android:id="@+id/metalpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/metalpoint" />

        <ImageView
            android:id="@+id/cafeaulait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/cafeaulait" />

        <ImageView
            android:id="@+id/hardclub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/hardclub" />

        <ImageView
            android:id="@+id/armazem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:visibility="gone"
            app:srcCompat="@mipmap/armazem" />

        <ImageView
            android:id="@+id/cavep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/cavep" />

        <ImageView
            android:id="@+id/armazemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/armazemp" />

        <ImageView
            android:id="@+id/mausp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/mausp" />

        <ImageView
            android:id="@+id/planobp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/planobp" />

        <ImageView
            android:id="@+id/metalpointp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/metalpointp" />

        <ImageView
            android:id="@+id/cafeaulaitp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/cafeaulaitp" />

        <ImageView
            android:id="@+id/hardclubp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/hardclubp" />

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-15dp"
        android:background="#FF000000"
        app:menu="@menu/navigation" />

</LinearLayout>
